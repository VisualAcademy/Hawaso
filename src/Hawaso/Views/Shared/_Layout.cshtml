<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hawaso</title>

    <!-- Bootstrap core CSS -->
    <link href="~/templates/landing/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="~/templates/landing/css/modern-business.css" rel="stylesheet">

    <link href="~/css/memoengine.pager.css" rel="stylesheet" />
